###################################################################
#no preplasma
#longl_5e17_no-preplasma
BASE=longl_5e17_no-preplasma
INTENSITY=5e17
mkdir -p $BASE
./genlsp.py -I $INTENSITY -l 3e-6  -w 8.14e-6 \
    -T 120e-15                  \
    --lim="(-20, 20,-25, 25)"   \
    --tlim="(-10,10,-15, 15)"   \
    --res="(800,1000)" \
    --fp="(-5, 0, 0)"\
    --targetdat="nopreplasma-thicker.dat"\
    --description="long wavelength, no preplasma"\
    --step="8e-17">$BASE/$BASE.lsp
./genpbs.py -p $BASE |\
    sed 's:../scripts/autozipper:../../scripts/autozipper:'\
    >$BASE/$BASE.pbs
cp *.dat $BASE/


