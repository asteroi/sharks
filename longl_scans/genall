#!/usr/bin/env bash

#longl_3e18
BASE=longl_3e18
INTENSITY=3e18
mkdir -p $BASE
./genlsp.py -I $INTENSITY -l 3e-6  -w 8.14e-6 \
    -T 120e-15                  \
    --lim="(-40, 10,-20, 20)"   \
    --tlim="(-30, 0,-15, 15)"   \
    --res="(800,800)" \
    --description="long wavelength"\
    --step="8e-17">$BASE/$BASE.lsp
./genpbs.py -p $BASE |\
    sed 's:../scripts/autozipper:../../scripts/autozipper:'\
    >$BASE/$BASE.pbs
cp *.dat $BASE/

